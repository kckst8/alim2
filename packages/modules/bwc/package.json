{
  "name": "@bentley/bwc-ts-react-components",
  "version": "0.0.1",
  "private": false,
  "author": "Bentley Systems, Inc.",
  "dependencies": {
    "@bentley/bwc": "^5.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ../../../node_modules components/ -o components/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./components --include-path ../../../node_modules components/ -o components/ --watch --recursive"
  },
  "devDependencies": {
    "@types/node": "^9.4.6",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "typescript": "^2.7.2",
    "node-sass-chokidar": "^0.0.3"
  }
}
